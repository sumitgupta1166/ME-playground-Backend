{
  "info": {
    "name": "Me API Playground - Full Routes with Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "http://localhost:8000/api/v1/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Service healthy\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data.status).to.eql(\"ok\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create or Update Profile",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "http://localhost:8000/api/v1/profile",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"education\": \"B.Tech in CSE\",\n  \"skills\": [\"nodejs\", \"react\", \"mongodb\"],\n  \"projects\": [\n    { \"title\": \"API Playground\", \"description\": \"Testing API backend\" }\n  ]\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Profile created or updated\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data).to.have.property(\"email\");",
              "    pm.expect(json.data).to.have.property(\"name\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Get Profile (by email)",
      "request": {
        "method": "GET",
        "url": "http://localhost:8000/api/v1/profile?email=john@example.com"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Profile fetched\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data.email).to.eql(\"john@example.com\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "List Profiles (with pagination)",
      "request": {
        "method": "GET",
        "url": "http://localhost:8000/api/v1/profile/list?page=1&limit=10"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Profiles returned with pagination\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data).to.have.property(\"data\");",
              "    pm.expect(json.data).to.have.property(\"page\");",
              "    pm.expect(json.data).to.have.property(\"limit\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Search Profiles",
      "request": {
        "method": "GET",
        "url": "http://localhost:8000/api/v1/search?q=portfolio"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Search returns results array\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data).to.be.an(\"array\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Projects by Skill",
      "request": {
        "method": "GET",
        "url": "http://localhost:8000/api/v1/projects?skill=react"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Projects by skill returned\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data).to.be.an(\"array\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Top Skills",
      "request": {
        "method": "GET",
        "url": "http://localhost:8000/api/v1/skills/top?limit=5"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"Top skills returned\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.data).to.be.an(\"array\");",
              "    if (json.data.length > 0) {",
              "        pm.expect(json.data[0]).to.have.property(\"skill\");",
              "        pm.expect(json.data[0]).to.have.property(\"count\");",
              "    }",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
